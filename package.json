{
  "name": "slipstream-ui",
  "author": "Michael McShinsky",
  "description": "Component library combining React and Tailwindcss, built with TypeScript",
  "version": "0.19.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "slipstream-banner.png",
    "config.js"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build-storybook": "npm run tailwind && build-storybook -s ./.storybook/public && cp src/assets/css/tailwind.output.css storybook-static/styles.css",
    "build": "tsdx build",
    "copy-assets": "cp -r src/assets/css dist/css",
    "lint:fix": "tsdx lint --fix",
    "lint": "tsdx lint",
    "prebuild": "npm run tailwind",
    "prepare": "tsdx build",
    "prestart": "npm run tailwind",
    "size": "size-limit",
    "start": "tsdx watch",
    "storybook": "npm run tailwind && start-storybook -s ./.storybook/public -p 6006",
    "tailwind:docs": "cp src/assets/css/tailwind.output.css docs/styles.css",
    "tailwind:storybook": "cp src/assets/css/tailwind.output.css .storybook/public/styles.css",
    "tailwind": "tailwindcss build -i src/assets/css/tailwind.css -o src/assets/css/tailwind.output.css && npm run tailwind:storybook",
    "test": "tsdx test --passWithNoTests"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/slipstream-ui.esm.js",
  "size-limit": [
    {
      "path": "dist/slipstream-ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/slipstream-ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addons": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "autoprefixer": "^9",
    "babel-loader": "^8.2.2",
    "husky": "^5.1.2",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "8",
    "postcss-cli": "^8.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^4.9.2",
    "tailwindcss": "^2.2.17",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "@storybook/addon-postcss": "^2.0.0",
    "@tailwindcss/forms": "^0.3.3",
    "@types/react-modal": "^3.12.0",
    "classnames": "^2.2.6",
    "react-modal": "^3.12.1",
    "react-popper": "^2.2.5",
    "svg-react-loader": "^0.4.6"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
